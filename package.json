{
	"name": "storkio-api",
	"version": "0.0.0",
	"description": "",
	"main": "src/app.js",
	"module": "src/app.js",
	"scripts": {
		"test": "npm run lint && npm run jest",
		"jest": "jest",
		"babel": "babel src -d dist -s",
		"copy": "copyfiles package.json .env.defaults .env.schema dist",
		"build": "rimraf dist && npm run babel && npm run copy",
		"lint": "run-p lint-*",
		"precommit": "lint-staged",
		"commitmsg": "commitlint -e",
		"lint-src": "eslint src --fix",
		"lint-tests": "eslint __tests__ --fix",
		"dev": "nodemon --watch server --exec \"babel-node\" src/app.js",
		"prod": "npm run build && node dist/app.js"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/storkio/storkio-api.git"
	},
	"keywords": [],
	"author": "storkio",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/storkio/storkio-api/issues"
	},
	"homepage": "https://github.com/storkio/storkio-api#readme",
	"engines": {
		"node": ">=8"
	},
	"lint-staged": {
		"*.js": [
			"eslint --fix",
			"git add"
		]
	},
  "jest": {
    "notify": true,
    "collectCoverage": true,
    "testMatch": [
      "**/__tests__/**/*.spec.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
	"devDependencies": {
		"@babel/cli": "^7.1.2",
		"@babel/core": "^7.1.2",
		"@babel/node": "^7.0.0",
		"@babel/plugin-proposal-object-rest-spread": "^7.0.0",
		"@babel/preset-env": "^7.1.0",
		"@commitlint/cli": "^7.1.2",
		"@commitlint/config-angular": "^7.1.2",
		"babel-core": "^7.0.0-bridge.0",
		"babel-jest": "^23.6.0",
		"copyfiles": "^2.1.0",
		"eslint": "^5.6.1",
		"eslint-config-noamokman": "^8.0.1",
		"eslint-plugin-import": "^2.14.0",
		"eslint-plugin-jest": "^21.24.0",
		"eslint-plugin-lodash": "^3.1.0",
		"eslint-plugin-unicorn": "^6.0.1",
		"husky": "^1.0.1",
		"jest": "^23.6.0",
		"lint-staged": "^7.3.0",
		"nodemon": "^1.18.4",
		"npm-run-all": "^4.1.3",
		"supertest": "^3.3.0"
	},
	"dependencies": {
		"body-parser": "^1.18.3",
		"compression": "^1.7.3",
		"cookie-parser": "^1.4.3",
		"dotenv-extended": "^2.3.0",
		"email-address": "^1.2.2",
		"env-bunyan": "^0.1.0",
		"express": "^4.16.3",
		"express-async-router": "^0.1.13",
		"express-json-error-handler": "^2.0.0",
		"express-jwt": "^5.3.1",
		"express-mongoose-errors": "^0.2.0",
		"express-param-objectid": "^1.0.0",
		"helmet": "^3.13.0",
		"http-errors": "^1.7.1",
		"http-reject-empty": "^1.0.0",
		"in-production": "^1.0.1",
		"jsonwebtoken": "^8.3.0",
		"lodash": "^4.17.11",
		"method-override": "^3.0.0",
		"mongoose": "^5.3.0",
		"mongoose-plugin-seed": "^0.4.0",
		"morgan": "^1.9.1",
		"passport": "^0.4.0",
		"passport-local-mongoose": "^5.0.1",
		"pify": "^4.0.0",
		"socket.io": "^2.1.1",
		"socketio-jwt": "^4.5.0"
	},
	"private": true
}
